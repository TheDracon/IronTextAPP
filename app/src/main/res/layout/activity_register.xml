<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:screenOrientation="portrait"
        tools:context=".activities.LoginActivity" android:background="@color/colorBackground">


    <TextView
            android:text="Registrate"
            android:layout_width="326dp"
            android:layout_height="66dp" android:id="@+id/textView"
            android:textColor="@color/title" android:textAlignment="center" android:textSize="48sp"
            android:fontFamily="@font/orbitron_medium"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/emailInput" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="36dp"/>
    <EditText android:layout_width="375dp" android:layout_height="80dp"
              android:hint="Email"
              android:id="@+id/emailInput"
              android:backgroundTint="@color/colorPrimary"
              android:paddingStart="10dp"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintVertical_bias="0.209" android:textColor="@color/white"
              android:textColorHint="@color/text"
              android:fontFamily="@font/orbitron_medium" app:layout_constraintHorizontal_bias="0.5"
              android:textSize="14sp"/>
    <EditText android:layout_width="375dp" android:layout_height="78dp"
              android:hint="Nombre de usuario"
              android:id="@+id/nicknameInput"
              android:backgroundTint="@color/colorPrimary"
              android:paddingStart="10dp"
              android:textColor="@color/white" android:textColorHint="@color/text"
              android:fontFamily="@font/orbitron_medium"
              app:layout_constraintTop_toBottomOf="@+id/emailInput" app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="28dp"
              app:layout_constraintHorizontal_bias="0.5" android:textSize="14sp"/>
    <EditText android:layout_width="180dp" android:layout_height="59dp"
              android:hint="Repitie la contraseña"
              android:inputType="textPassword"
              android:id="@+id/passwordInput"
              android:backgroundTint="@color/colorPrimary"
              android:paddingStart="10dp"
              android:textColor="#FFFFFF"
              android:textColorHint="@color/text"
              app:layout_constraintTop_toBottomOf="@+id/emailInput"
              android:layout_marginTop="144dp"
              android:fontFamily="@font/orbitron_medium" android:textSize="14sp"
              app:layout_constraintStart_toStartOf="@+id/registerButton" android:layout_marginStart="100dp"/>
    <EditText android:layout_width="180dp" android:layout_height="59dp"
              android:hint="Contraseña"
              android:inputType="textPassword"
              android:id="@+id/repeatPasswordInput"
              android:backgroundTint="@color/colorPrimary"
              android:paddingStart="10dp"
              android:textColor="#FFFFFF"
              android:textColorHint="@color/text"
              app:layout_constraintTop_toBottomOf="@+id/emailInput"
              android:layout_marginTop="144dp"
              android:fontFamily="@font/orbitron_medium" android:textSize="14sp"
              app:layout_constraintEnd_toEndOf="@+id/registerButton" android:layout_marginEnd="100dp"/>
    <Button android:layout_width="190dp" android:layout_height="61dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/passwordInput"
            android:text="Registrate"
            android:backgroundTint="@color/colorPrimary"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintVertical_bias="0.086"
            android:id="@+id/registerButton" android:textColor="#1C1F26" android:fontFamily="@font/orbitron_medium"/>
    <TextView
            android:text="¿Ya tienes una cuenta?"
            android:layout_width="192dp"
            android:layout_height="28dp" android:id="@+id/textView2"
            android:textAlignment="center"
            android:textColor="@color/text" android:fontFamily="@font/orbitron_medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="@+id/registerButton"
            android:layout_marginTop="61dp" app:layout_constraintBottom_toTopOf="@+id/logInButton"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.0"/>
    <Button android:layout_width="162dp" android:layout_height="61dp"
            android:text="Inicia sessión"
            android:backgroundTint="#00191A21"
            android:id="@+id/logInButton"
            android:textSize="12sp" android:textColor="@color/text"
            android:outlineSpotShadowColor="@color/colorPrimaryVariant"
            android:fontFamily="@font/orbitron_medium"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/registerButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
    <ImageView
            android:layout_width="145dp"
            android:layout_height="135dp" app:srcCompat="@drawable/logo_transparent"
            android:id="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logInButton" android:layout_marginTop="28dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>