<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:screenOrientation="portrait"
        tools:context=".activities.MainActivity">
    <ListView
            android:layout_width="match_parent"
            android:id="@+id/messages_view"
            android:layout_weight="2"
            android:divider="#fff"
            android:layout_height="379dp"
    >
    </ListView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="57dp">
        <EditText
                android:layout_width="344dp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_height="match_parent"
                android:inputType="text"
                android:hint="Mensaje"
                android:paddingHorizontal="10dp"

                android:textColorHint="@color/colorPrimary"
                android:ems="10"
                android:id="@+id/editMessage" android:layout_weight="1"/>
        <ImageButton
                android:backgroundTint="#ffffffff"
                android:layout_width="65dp"
                android:layout_height="match_parent" app:srcCompat="@drawable/baseline_send_24"
                android:id="@+id/sendMessageBtn" android:layout_weight="1" android:contentDescription="Envia el mensaje"/>
    </LinearLayout>

</LinearLayout>